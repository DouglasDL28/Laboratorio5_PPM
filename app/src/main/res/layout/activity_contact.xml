<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ContactActivity">

    <ImageView
            android:layout_width="158dp"
            android:layout_height="152dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.206"/>
    <TextView
            android:layout_width="179dp"
            android:layout_height="21dp"
            android:id="@+id/contactNumber"
            android:textColor="@android:color/holo_blue_dark" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.599"
            app:layout_constraintHorizontal_bias="0.283" android:text="Numero" android:textAlignment="textStart"/>
    <TextView
            android:layout_width="180dp"
            android:layout_height="22dp"
            android:id="@+id/contactEmail" android:textColor="@android:color/holo_blue_dark"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.678" android:text="Telefono" android:textAlignment="textStart"/>
    <Button
            android:text="INICIO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.816"
            android:onClick="homeButton_click"/>
    <TextView
            android:layout_width="177dp"
            android:layout_height="21dp"
            android:id="@+id/contactName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="131dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.712" app:layout_constraintHorizontal_bias="0.527"
            android:text="Nombre" android:textAlignment="textStart"/>
    <Button
            android:text="EDITAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.95"/>
</android.support.constraint.ConstraintLayout>